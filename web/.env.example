# ===================================================================
# CONFIGURACIÓN FRONTEND - SISTEMA DE GESTIÓN DE GIMNASIO V6
# ===================================================================
# 
# 📋 INSTRUCCIONES:
# 1. Copia este archivo a .env.local para desarrollo
# 2. Para producción, configura estas variables en tu plataforma de deployment
# 3. NUNCA expongas claves sensibles en variables NEXT_PUBLIC_*

# ===================================================================
# CONFIGURACIÓN GENERAL
# ===================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_VERSION=6.0.0
NEXT_PUBLIC_APP_NAME="Sistema de Gestión de Gimnasio"

# ===================================================================
# CONFIGURACIÓN DE API
# ===================================================================
# URL del backend API
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3

# ===================================================================
# CONFIGURACIÓN DE DESARROLLO
# ===================================================================
# Habilitar herramientas de desarrollo
NEXT_PUBLIC_DEV_TOOLS=true
NEXT_PUBLIC_DEBUG_MODE=false

# React Query configuración
NEXT_PUBLIC_QUERY_STALE_TIME=300000
NEXT_PUBLIC_QUERY_CACHE_TIME=600000

# ===================================================================
# CONFIGURACIÓN DE UI/UX
# ===================================================================
# Tema por defecto
NEXT_PUBLIC_DEFAULT_THEME=system
NEXT_PUBLIC_THEME_STORAGE_KEY=gym-theme

# Configuración de paginación
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=20
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# ===================================================================
# CONFIGURACIÓN DE ARCHIVOS
# ===================================================================
# Límites de subida de archivos
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "image/gif", "application/pdf"]

# ===================================================================
# CONFIGURACIÓN DE SEGURIDAD
# ===================================================================
# Configuración de sesiones
NEXT_PUBLIC_SESSION_TIMEOUT=1800000
NEXT_PUBLIC_IDLE_TIMEOUT=600000

# ===================================================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ===================================================================
NEXT_PUBLIC_NOTIFICATIONS_ENABLED=true
NEXT_PUBLIC_NOTIFICATION_TIMEOUT=5000

# ===================================================================
# CONFIGURACIÓN DE ANALYTICS (OPCIONAL)
# ===================================================================
# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=

# Sentry para tracking de errores
NEXT_PUBLIC_SENTRY_DSN=

# ===================================================================
# CONFIGURACIÓN DE MAPAS (OPCIONAL)
# ===================================================================
# Google Maps API Key
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# ===================================================================
# CONFIGURACIÓN DE CARACTERÍSTICAS
# ===================================================================
# Habilitar/deshabilitar funcionalidades
NEXT_PUBLIC_FEATURE_P2P_SYNC=true
NEXT_PUBLIC_FEATURE_ADVANCED_REPORTS=true
NEXT_PUBLIC_FEATURE_PAYMENT_GATEWAY=false
NEXT_PUBLIC_FEATURE_NOTIFICATIONS=true

# ===================================================================
# CONFIGURACIÓN DE DESARROLLO LOCAL
# ===================================================================
# Puerto para desarrollo
PORT=3000

# Configuración de hot reload
FAST_REFRESH=true

# ===================================================================
# CONFIGURACIÓN DE BUILD
# ===================================================================
# Configuración de optimización
NEXT_PUBLIC_OPTIMIZE_IMAGES=true
NEXT_PUBLIC_OPTIMIZE_CSS=true
NEXT_PUBLIC_COMPRESS_ASSETS=true

# ===================================================================
# CONFIGURACIÓN DE MONITOREO
# ===================================================================
# Habilitar métricas de rendimiento
NEXT_PUBLIC_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_VITALS_REPORTING=false 