# =============================================================================
# CONFIGURACIÓN DE PRODUCCIÓN
# Sistema de Gestión de Gimnasio v6.0
# =============================================================================

# =============================================================================
# CONFIGURACIÓN GENERAL
# =============================================================================
GYM_ENV=production
GYM_DEBUG=false
BUILD_TARGET=production
NODE_ENV=production

# Configuración de Idioma y Zona Horaria
TZ=America/Mexico_City
LANG=es_ES.UTF-8
LC_ALL=es_ES.UTF-8

# Configuración de Logs
LOG_LEVEL=info
GYM_AUDIT_LOG=true

# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =============================================================================
GYM_DB_NAME=gym_db_prod
GYM_DB_USER=gym_user_prod
# IMPORTANTE: Cambiar esta contraseña por una segura de al menos 16 caracteres
GYM_DB_PASSWORD=REEMPLAZAR_CONTRASEÑA_DB_SEGURA_GENERADA
GYM_DB_PORT=5432
GYM_DB_SSL_MODE=require

# Configuración de Redis
# IMPORTANTE: Cambiar esta contraseña por una segura de al menos 16 caracteres
GYM_REDIS_PASSWORD=REEMPLAZAR_CONTRASEÑA_REDIS_SEGURA_GENERADA
REDIS_PORT=6379

# =============================================================================
# CONFIGURACIÓN DE SERVICIOS
# =============================================================================
BACKEND_PORT=8000
BACKEND_WORKERS=8
BACKEND_MEMORY_LIMIT=2g
GYM_METRICS_PORT=9000

FRONTEND_PORT=3000
FRONTEND_MEMORY_LIMIT=1g
# IMPORTANTE: Configurar URL real del dominio en producción
NEXT_PUBLIC_API_URL=https://your-domain.com/api

HTTP_PORT=80
HTTPS_PORT=443

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================================================
# IMPORTANTE: Generar claves secretas seguras con: python -c "import secrets; print(secrets.token_urlsafe(64))"
GYM_SECRET_KEY=REEMPLAZAR_SECRET_KEY_SEGURA_GENERADA
GYM_JWT_SECRET_KEY=REEMPLAZAR_JWT_SECRET_KEY_SEGURA_GENERADA
GYM_BACKUP_KEY=REEMPLAZAR_BACKUP_KEY_SEGURA_GENERADA

# Configuración de seguridad
GYM_FORCE_HTTPS=true
GYM_SECURE_COOKIES=true
GYM_SAMESITE_COOKIES=strict
# IMPORTANTE: Configurar dominios reales en producción
GYM_ALLOWED_HOSTS=your-domain.com,www.your-domain.com
GYM_CORS_ORIGINS=["https://your-domain.com","https://www.your-domain.com"]
GYM_SECURITY_HEADERS=true
GYM_RATE_LIMITING=true
GYM_RATE_LIMIT=60
GYM_MAX_LOGIN_ATTEMPTS=3
GYM_LOCKOUT_TIME=30
GYM_SESSION_TIMEOUT=30

# Configuración de archivos
GYM_MAX_UPLOAD_SIZE=10485760
GYM_MAX_REQUEST_SIZE=20971520
GYM_ALLOWED_EXTENSIONS=["jpg","jpeg","png","pdf"]

# =============================================================================
# CONFIGURACIÓN DE MONITOREO
# =============================================================================
GYM_PROMETHEUS_METRICS=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_USERNAME=admin
# IMPORTANTE: Cambiar esta contraseña por una segura
GRAFANA_PASSWORD=REEMPLAZAR_GRAFANA_PASSWORD_SEGURA_GENERADA 