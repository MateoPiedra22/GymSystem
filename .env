# Configuración de Base de Datos - Sistema de Gestión de Gimnasio v6.0

# Configuración de Base de Datos PostgreSQL
GYM_DB_NAME=gym_db
GYM_DB_USER=gym_user
GYM_DB_PASSWORD=gym_secure_password_2024
GYM_DB_PORT=5432
GYM_DB_SSL_MODE=prefer

# Configuración de Redis
GYM_REDIS_PASSWORD=redis_secure_password_2024
REDIS_PORT=6379

# Configuración de pgAdmin
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=pgadmin_secure_password_2024

# Configuración General
GYM_ENV=development
GYM_DEBUG=true
BUILD_TARGET=development
NODE_ENV=development

# Configuración de Idioma y Zona Horaria
TZ=America/Mexico_City
LANG=es_ES.UTF-8
LC_ALL=es_ES.UTF-8

# Configuración de Logs
LOG_LEVEL=debug
GYM_AUDIT_LOG=true

# Configuración de Dominio (Producción)
DOMAIN=your-domain.com
SSL_EMAIL=admin@your-domain.com

# Configuración de Puertos
HTTP_PORT=80
HTTPS_PORT=443
BACKEND_PORT=8000
FRONTEND_PORT=3000
GYM_METRICS_PORT=9000

# Configuración de Memoria
BACKEND_MEMORY_LIMIT=1g
FRONTEND_MEMORY_LIMIT=1g

# Configuración de Workers
BACKEND_WORKERS=4

# Configuración de Seguridad
GYM_SECRET_KEY=gym_secret_key_ultra_secure_2024_64_chars_minimum
GYM_JWT_SECRET_KEY=gym_jwt_secret_key_ultra_secure_2024_64_chars_minimum
GYM_BACKUP_KEY=gym_backup_key_secure_2024_32_chars_minimum

# Configuración de URLs
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# Configuración específica del Frontend Next.js
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_LOG_LEVEL=warn
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Configuración de Seguridad
GYM_FORCE_HTTPS=false
GYM_SECURE_COOKIES=false
GYM_SAMESITE_COOKIES=lax
GYM_ALLOWED_HOSTS=localhost,127.0.0.1
GYM_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
GYM_SECURITY_HEADERS=true
GYM_RATE_LIMITING=true
GYM_RATE_LIMIT=100
GYM_MAX_LOGIN_ATTEMPTS=5
GYM_LOCKOUT_TIME=15
GYM_SESSION_TIMEOUT=60
GYM_MAX_UPLOAD_SIZE=10485760
GYM_MAX_REQUEST_SIZE=20971520
GYM_ALLOWED_EXTENSIONS=["jpg","jpeg","png","pdf"]
GYM_PROMETHEUS_METRICS=true 