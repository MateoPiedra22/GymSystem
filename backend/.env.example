# ===================================================================
# CONFIGURACIÓN GENERAL
# ===================================================================
GYM_ENV=development
GYM_DEBUG=False
GYM_VERSION=6.0.0

# ===================================================================
# CLAVES DE SEGURIDAD
# ===================================================================
# Generar con: openssl rand -hex 32
GYM_SECRET_KEY=DevSecretKey2024!@#$%^&*()_+QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm1234567890
GYM_JWT_SECRET_KEY=DevJWTSecret2024!@#$%^&*()_+QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm1234567890
GYM_BACKUP_KEY=DevBackupKey2024!@#$%^&*()_+QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm1234567890

# Configuración de tokens
GYM_ACCESS_TOKEN_EXPIRE_MINUTES=30
GYM_REFRESH_TOKEN_EXPIRE_DAYS=7
GYM_ALGORITHM=HS256
GYM_BCRYPT_ROUNDS=12

# ===================================================================
# USUARIO ADMINISTRADOR INICIAL
# ===================================================================
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@gymlocal.dev
ADMIN_PASSWORD=DevAdminPass2024!@#$%^&*()

# ===================================================================
# BASE DE DATOS POSTGRESQL
# ===================================================================
GYM_DB_HOST=localhost
GYM_DB_PORT=5432
GYM_DB_NAME=gym_dev_db
GYM_DB_USER=gym_dev_user
GYM_DB_PASSWORD=DevSecurePass2024!@#$%^&*()

# Configuración avanzada de BD
GYM_DB_SSL_MODE=prefer
GYM_DB_POOL_SIZE=5
GYM_DB_MAX_OVERFLOW=3
GYM_DB_CONNECT_TIMEOUT=10
GYM_DB_ECHO=False

# ===================================================================
# REDIS CACHE
# ===================================================================
GYM_REDIS_HOST=localhost
GYM_REDIS_PORT=6379
GYM_REDIS_PASSWORD=DevRedisPass2024!@#$%^&*()
GYM_REDIS_DB=0
GYM_REDIS_SSL=false
GYM_REDIS_CONNECT_TIMEOUT=5

# ===================================================================
# CONFIGURACIÓN DEL SERVIDOR
# ===================================================================
GYM_SERVER_HOST=0.0.0.0
GYM_SERVER_PORT=8000
GYM_SERVER_WORKERS=1
GYM_SERVER_RELOAD=True

# ===================================================================
# SEGURIDAD
# ===================================================================
GYM_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
# En producción, reemplaza los orígenes de CORS por el dominio real del frontend, por ejemplo:
# GYM_CORS_ORIGINS=["https://tudominio.com"]
GYM_CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:8080"]
GYM_FORCE_HTTPS=False
GYM_SECURE_COOKIES=False
GYM_SAMESITE_COOKIES=lax

# Configuración de seguridad avanzada
GYM_SECURITY_HEADERS=True
GYM_RATE_LIMITING=True
GYM_RATE_LIMIT=100
GYM_MAX_LOGIN_ATTEMPTS=5
GYM_LOCKOUT_TIME=15
GYM_SESSION_TIMEOUT=60

# ===================================================================
# CONFIGURACIÓN DE ARCHIVOS
# ===================================================================
GYM_UPLOAD_DIR=uploads
GYM_MAX_UPLOAD_SIZE=10485760
GYM_MAX_REQUEST_SIZE=20971520
GYM_ALLOWED_EXTENSIONS=["jpg", "jpeg", "png", "gif", "pdf", "doc", "docx"]
GYM_UPLOAD_ALLOWED_MIME_TYPES=["image/jpeg", "image/png", "image/gif", "application/pdf"]

# ===================================================================
# LOGGING
# ===================================================================
GYM_LOG_LEVEL=INFO
GYM_LOG_FILE=logs/gym_dev.log
GYM_LOG_MAX_SIZE=50MB
GYM_LOG_BACKUP_COUNT=5
GYM_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ===================================================================
# AUDITORÍA Y MONITOREO
# ===================================================================
GYM_AUDIT_LOG=True
GYM_PROMETHEUS_METRICS=True
GYM_METRICS_PORT=9000
GYM_HEALTH_CHECK_ENABLED=True

# ===================================================================
# BACKUP AUTOMÁTICO
# ===================================================================
GYM_BACKUP_DIR=backups
GYM_AUTO_BACKUP_ENABLED=True
GYM_BACKUP_RETENTION_DAYS=7
GYM_BACKUP_SCHEDULE=0 2 * * *

# ===================================================================
# CONFIGURACIÓN DE EMAIL (OPCIONAL)
# ===================================================================
GYM_EMAIL_ENABLED=False
GYM_SMTP_HOST=smtp.example.com
GYM_SMTP_PORT=587
GYM_SMTP_USERNAME=email@example.com
GYM_SMTP_PASSWORD=DevEmailPass2024!@#$%^&*()
GYM_SMTP_FROM=noreply@example.com
GYM_SMTP_TLS=True

# ===================================================================
# FUNCIONALIDADES ESPECÍFICAS
# ===================================================================
# Sincronización P2P
GYM_P2P_ENABLED=True
GYM_P2P_PORT=8001
GYM_P2P_DISCOVERY=True

# Integraciones externas
GYM_EXTERNAL_API_ENABLED=False
GYM_EXTERNAL_API_URL=
GYM_EXTERNAL_API_KEY=

# ===================================================================
# CONFIGURACIÓN PARA TESTS
# ===================================================================
GYM_TEST_DB_NAME=gym_test_db
GYM_TEST_REDIS_DB=1
GYM_TEST_LOG_LEVEL=WARNING

# ===================================================================
# CONFIGURACIÓN DE DESARROLLO
# ===================================================================
GYM_DEV_TOOL_ENABLED=True
GYM_API_DOCS_ENABLED=True
GYM_SWAGGER_UI_ENABLED=True
GYM_REDOC_ENABLED=True 